<Window x:Class="MIEWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIEWpf"
        mc:Ignorable="d"
        Title="MakeInstallationEasier" Height="450" Width="800" FontFamily="Tempus Sans ITC" FontSize="14" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Background="Thistle">
            <MenuItem Header="File" Height="30">
                <MenuItem Header="Open" Height="30"/>
            </MenuItem>
            <MenuItem Header="Help" Height="30"/>
            <MenuItem Header="About" Height="30"/>
        </Menu>
        <StatusBar Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="5" Background="Thistle">
            <StatusBarItem>
                <TextBlock Height="30" Text="The status of operation is"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Height="30" x:Name="statusOfOperation"/>
            </StatusBarItem>
        </StatusBar>
        <ListBox x:Name="chekedListbox" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Background="Thistle"/>
        <TextBlock Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="1" Text="Please, drag and drop your file there:"/>
        <TextBlock Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="1" x:Name="textFilePath"/>
        <Button Grid.Column="3" Grid.Row="3" x:Name="findDirectoriesButton" Content="Find directories" Click="FindDirectoriesButton_OnClick"/>
        <Button Grid.Column="4" Grid.Row="3" x:Name="replaceButton" Content="Replace"/>
        <Button Grid.Column="3" Grid.Row="4" x:Name="selectAllButton" Content="Select all"/>
        <Button Grid.Column="4" Grid.Row="4" x:Name="clearSelectionButton" Content="Clear selection"/>
    </Grid>
</Window>
